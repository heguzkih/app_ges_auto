<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E7AA4"
    android:rotation="0"
    android:rotationX="0"
    android:rotationY="0"
    tools:context=".InicioProfesor">

    <ScrollView
        android:layout_width="357dp"
        android:layout_height="700dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textnombreEtiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30px"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/allerta"
                android:text="@string/nombre"
                android:textAlignment="gravity"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30px"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/allerta"
                android:text="@string/nombre"
                android:textAlignment="center"

                android:textSize="24sp" />

            <TextView
                android:id="@+id/textprimerapellidoEtiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30px"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/allerta"
                android:text="@string/PrimerApellido"
                android:textAlignment="gravity"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textprimerapellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30px"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/allerta"
                android:text="@string/PrimerApellido"
                android:textAlignment="center"

                android:textSize="24sp" />

            <TextView
                android:id="@+id/textsegundoapellidoetiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30px"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/allerta"
                android:text="@string/SegundoApellido"
                android:textAlignment="gravity"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textsegundoapellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30px"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/allerta"
                android:text="@string/SegundoApellido"
                android:textAlignment="center"

                android:textSize="24sp" />

            <TextView
                android:id="@+id/textpermisosoetiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30px"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/allerta"
                android:text="@string/permisos"
                android:textAlignment="gravity"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textpermisoso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30px"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/allerta"
                android:text="@string/permisos"
                android:textAlignment="center"

                android:textSize="24sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnProfesores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="15dp"

                    android:fontFamily="@font/allerta"
                    android:text="@string/Profesores"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnAlumnos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/allerta"
                    android:text="@string/Alumnos"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonPracticas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30px"
                android:layout_marginRight="15dp"
                android:text="@string/Practicas" />

            <ImageView
                android:id="@+id/p_profesor_fondo"
                android:layout_width="288dp"
                android:layout_height="188dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/p_proofesor_fondo"
                app:srcCompat="@drawable/p_profesor" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>